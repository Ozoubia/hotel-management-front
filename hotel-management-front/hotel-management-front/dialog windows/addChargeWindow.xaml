<Window x:Class="hotel_management_front.dialog_windows.addChargeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_management_front.dialog_windows"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Ajouter Charge" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Ajouter une charge" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0 15 0 0"></TextBlock>
            <TextBox x:Name="typeField" Width="200" materialDesign:HintAssist.Hint="Type charge" Margin="10"></TextBox>
            <DatePicker x:Name="dateChargeField" materialDesign:HintAssist.Hint="Date charge" FontSize="17" Width="200"/>
            <TextBox x:Name="priceField" Width="200" materialDesign:HintAssist.Hint="Prix" Margin="10"></TextBox>
            <Button x:Name="confirmBtn" Click="confirmBtn_Click" Width="100" Margin="0 30 0 0">Confirmer</Button>
        </StackPanel>
    </Grid>
</Window>
