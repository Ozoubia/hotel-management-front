<Window x:Class="hotel_management_front.dialog_windows.alimenterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_management_front.dialog_windows"
        mc:Ignorable="d"
        Title="Alimenter" Height="200" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <Grid HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
                <TextBlock FontWeight="Bold" FontSize="16">Alimenter</TextBlock>
                <TextBlock x:Name="caisseFieldName" FontWeight="Bold" FontSize="16" Margin="5 0 0 0"></TextBlock>
            </StackPanel>

            <TextBox x:Name="SommeField" Margin="0 10 0 10"></TextBox>
            <Button x:Name="confirmerBtn" Margin="0 5 0 10" Click="confirmerBtn_Click">Confirmer</Button>
        </StackPanel>
    </Grid>
</Window>
