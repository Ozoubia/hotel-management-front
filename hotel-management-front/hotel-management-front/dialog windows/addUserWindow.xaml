<Window x:Class="hotel_management_front.dialog_windows.addUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_management_front.dialog_windows"
        mc:Ignorable="d"
        Title="Ajouter un utilisateur" Height="300" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Ajouter un utilisateur" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0 15 0 0"></TextBlock>
            <TextBox x:Name="usernameField" Width="200" Margin="10"></TextBox>
            <PasswordBox x:Name="passField" Width="200" Margin="10"></PasswordBox>
            <Button x:Name="confirmBtn" Click="confirmBtn_Click" Width="100" Margin="0 30 0 0">Confirmer</Button>
        </StackPanel>
    </Grid>
</Window>
