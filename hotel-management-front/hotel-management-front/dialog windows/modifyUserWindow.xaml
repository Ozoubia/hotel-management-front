<Window x:Class="hotel_management_front.dialog_windows.modifyUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_management_front.dialog_windows"
        mc:Ignorable="d"
        Title="Modifier un utilisateur" Height="300" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Modifier un utilisateur" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0 15 0 0"></TextBlock>
            <TextBox x:Name="usernameField" Width="200" Margin="10"></TextBox>
            <TextBox x:Name="passField" Width="200" Margin="10"></TextBox>
            <CheckBox x:Name="activateAccountCheckbox" Checked="activateAccountCheckbox_Checked" Unchecked="activateAccountCheckbox_Unchecked" Width="200">Compte active</CheckBox>
            <Button x:Name="delBtn" Click="delBtn_Click" Width="180" Height="28" Background="Red" Margin="0 10 0 0">Supprimer l'utilisateur</Button>
            <Button x:Name="confirmBtn" Click="confirmBtn_Click" Width="100" Margin="0 5 0 0">Modifier</Button>
        </StackPanel>
    </Grid>
</Window>
