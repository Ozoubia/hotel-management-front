<UserControl x:Class="hotel_management_front.tabsUserControl.PetitDejeunUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hotel_management_front.tabsUserControl"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="100" d:DesignWidth="500">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <CheckBox  x:Name="chechBox1" Width="50" Height="50" Margin="5" Checked="chechBox1_Checked " Unchecked="chechBox1_Unchecked" 
             Style="{StaticResource MaterialDesignCheckBox}">
                 
            </CheckBox>
            <TextBlock x:Name="petitdejeunTxt" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBox Margin="10 20 0 0" Width="100"  x:Name="materialInfo" materialDesign:HintAssist.Hint="Quantitee" Visibility="Hidden"></TextBox>
            <Button x:Name="AddBtn" Click="AddBtn_Click" Background="DarkRed"> +</Button>
            
        </StackPanel>
    </Grid>
</UserControl>
