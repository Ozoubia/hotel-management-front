<UserControl x:Class="hotel_management_front.tabsUserControl.modifierMatérielCuisineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hotel_management_front.tabsUserControl"
             mc:Ignorable="d" 
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="100" d:DesignWidth="500">
    <Grid>
        <StackPanel Orientation="Horizontal">

            <Button Width="25" Height="25" Margin="10" x:Name="btn" Background="Blue" Click="btn_Click"></Button>
            <TextBlock x:Name="materialTxt" Margin="5" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBox Margin="20 0 0 0" Width="150" x:Name="materialInfo" materialDesign:HintAssist.Hint="Quantitee" Visibility="Hidden"></TextBox>
            <Button Width="25" Height="25" Margin="1" x:Name="Modifierbtn" Background="Yellow" Click="Modifierbtn_Click">+</Button>
        </StackPanel>
    </Grid>
</UserControl>
