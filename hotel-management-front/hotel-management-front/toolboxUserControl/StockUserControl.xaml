<UserControl x:Class="hotel_management_front.toolboxUserControl.StockUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hotel_management_front.toolboxUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="85" d:DesignWidth="600">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="restauration" Margin="20 0 10 0" Click="restauration_Click">Restauration</Button>
            <Button x:Name="material"  Margin="10 0 10 0" Click="material_Click">Material</Button>
            <Button x:Name="stockSecours" Margin="10 0 10 0" Click="stockSecours_Click">Stock secours</Button>
        </StackPanel>
    </Grid>
</UserControl>
