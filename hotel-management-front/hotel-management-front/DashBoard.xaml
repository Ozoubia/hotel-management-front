<Window x:Class="hotel_management_front.DashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_management_front"
        mc:Ignorable="d"
        Title="DashBoard" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--menu-->
        <StackPanel Orientation="Horizontal">
            <Button Background="Transparent" BorderBrush="Transparent" Foreground="black">Tableau de bord</Button>
            <Button Background="Transparent" BorderBrush="Transparent" Foreground="black">Hotel</Button>
            <Button Background="Transparent" BorderBrush="Transparent" Foreground="black">Stock</Button>
            <Button Background="Transparent" BorderBrush="Transparent" Foreground="black">Personnel</Button>
            <Button Background="Transparent" BorderBrush="Transparent" Foreground="black">Parametre</Button>
        </StackPanel>
        <!--menu items-->
        <!--tabs-->
        <!--content-->    
    </Grid>
</Window>
