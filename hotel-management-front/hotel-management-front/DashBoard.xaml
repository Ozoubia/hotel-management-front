<Window x:Class="hotel_management_front.DashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_management_front"
        mc:Ignorable="d"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DashBoard" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="85"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <!--menu-->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Background="Transparent" BorderBrush="Transparent" FontWeight="Light" Foreground="black" x:Name="dashboardBtn" Click="dashboardBtn_Click">Tableau de bord</Button>
            <Button Background="Transparent" BorderBrush="Transparent" FontWeight="Light" Foreground="black" x:Name="hotelBtn" Click="hotelBtn_Click">Hotel</Button>
            <Button Background="Transparent" BorderBrush="Transparent" FontWeight="Light" Foreground="black" x:Name="stockBtn" Click="stockBtn_Click">Stock</Button>
            <Button Background="Transparent" BorderBrush="Transparent" FontWeight="Light" Foreground="black" x:Name="fournisseurBtn" Click="fournisseurBtn_Click">Fournisseur</Button>
            <Button Background="Transparent" BorderBrush="Transparent" FontWeight="Light" Foreground="black" x:Name="personnelBtn" Click="personnelBtn_Click">Personnel</Button>
            <Button Background="Transparent" BorderBrush="Transparent" FontWeight="Light" Foreground="black" x:Name="caisseBtn"   Click="caisseBtn_Click" >Caisse </Button>
            <Button Background="Transparent" BorderBrush="Transparent" FontWeight="Light" Foreground="black" x:Name="chargeBtn"   Click="chargeBtn_Click" >Charge</Button>
            <Button Background="Transparent" BorderBrush="Transparent" FontWeight="Light" Foreground="black" x:Name="parametresBtn" Click="parametresBtn_Click">Parametres</Button>
        </StackPanel>
        
        <!--menu items-->
        <StackPanel Orientation="Horizontal" x:Name="gridMenu" Grid.Row="1" Width="auto">
        </StackPanel>
        <!--tabs-->
        <Grid  Grid.Row="2" HorizontalAlignment="Stretch">
            <!--tab control-->
            <dragablz:TabablzControl Loaded="tabControlDragable_Loaded" FixedHeaderCount="1" ShowDefaultCloseButton="True" x:Name="tabControlDragable">
                <TabItem Header="Tableau de bord">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                    </Grid>
                </TabItem>
                
            </dragablz:TabablzControl>
        </Grid>
        <StackPanel Grid.Row="4" Orientation="Horizontal" >
            <TextBlock x:Name="utilisateur" Text="hhhhh" Foreground="Black" FontSize="14" Margin="50,0,0,5"  Width="80"/>
            <Button x:Name="déconnecter" Background="White" Click="déconnecter_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
